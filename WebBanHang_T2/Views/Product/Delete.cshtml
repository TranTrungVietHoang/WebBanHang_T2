@{
}

@model WebBanHang_T2.Models.Product
@{
    ViewData["Title"] = "Xóa sản phẩm";
}

<h2>Xác nhận xóa sản phẩm</h2>
<div>
    <h4>Bạn có chắc muốn xóa sản phẩm này?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Tên</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Giá</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd>
        <dt class="col-sm-2">Mô tả</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Danh mục</dt>
        <dd class="col-sm-10">@(ViewBag.CategoryName ?? "N/A")</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>
